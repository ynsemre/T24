<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pnl_news_manset_container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_last_news"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/pnl_last_news_title_container"
        style="@style/LastNewsHeaderLayoutStyle">

        <TextView
            android:id="@+id/txt_last_news_title"
            style="@style/LastNewsHeaderTextViewStyle" />

    </FrameLayout>

</LinearLayout>
